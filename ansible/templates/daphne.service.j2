# Systemd Script for uWSGI.
# location: /etc/systemd/system/
[Unit]
Description=Daphne Server for PushingKarma
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory={{root_dir}}
ExecStart={{virtualenv}}/bin/daphne -u {{project_dir}}/daphne.sock pk.asgi:application
StandardOutput=file:{{logs_dir}}/daphne.log
StandardError=file:{{logs_dir}}/daphne.log
Restart=always

[Install]
WantedBy=multi-user.target
