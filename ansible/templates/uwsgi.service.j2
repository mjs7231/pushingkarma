# Systemd Script for uWSGI.
# location: /etc/systemd/system/
[Unit]
Description=uWSGI

[Service]
ExecStart={{virtualenv}}/bin/uwsgi --master --emperor /etc/uwsgi/sites --die-on-term --uid www-data --gid www-data --logto {{logs}}/uwsgi.log
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -INT $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target
Alias=uwsgi.service
